{
  "version": "1.7.0",
  "sourceOfTruth": "ui",
  "pdf": {
    "pageLayout": {
      "format": "letter",
      "marginTop": "1in",
      "marginBottom": "0.5in",
      "marginLeft": "0.75in",
      "marginRight": "0.75in"
    },
    "dataBindings": {
      "merchant": {
        "name": "inputs.merchant.name",
        "contactName": "inputs.merchant.contactName",
        "phone": "inputs.merchant.phone",
        "email": "inputs.merchant.email"
      },
      "meta": {
        "reportId": "ui.report.id",
        "reportDate": "ui.report.dateISO"
      },
      "metrics": {
        "monthlySavings": "ui.sections.salesImpact.hero.savings",
        "annualSavings": "ui.sections.salesImpact.hero.annualImpact",
        "quarterlySavings": "ui.sections.salesImpact.hero.quarterlySavings",
        "costReductionPct": "ui.sections.salesImpact.hero.costReductionPct",
        "isRetail": "ui.sections.salesImpact.hero.isRetail",
        "isRestaurant": "ui.sections.salesImpact.hero.isRestaurant",
        "currentCost": "results.currentMonthlyProcessingFee",
        "diffCollected": "results.totalPriceDiffCollected",
        "newProgramNetCost": "results.newProgramNetCost",
        "programType": "inputs.programType === \"DUAL_PRICING\" ? \"Dual Pricing\" : inputs.programType === \"CASH_DISCOUNTING\" ? \"Cash Discounting\" : \"Supplemental Fee\""
      },
      "salesImpact": "ui.sections.salesImpact",
      "customerInformation": "ui.sections.customerInformation",
      "inputParameters": "ui.sections.inputParameters",
      "liveVolumeBreakdown": "ui.sections.liveVolumeBreakdown",
      "monthlyProcessingSavings": "ui.sections.monthlyProcessingSavings",
      "monthlySavings": "ui.monthlySavings.items",
      "brand": {
        "logoUrl": "inputs.internal.logo"
      },
      "contacts": {
        "sales": {
          "name": "inputs.salesRep?.name",
          "phone": "inputs.salesRep?.phone",
          "email": "inputs.salesRep?.email"
        }
      }
    },
    "theme": {
      "colors": {
        "primary": "#004ED3",
        "ultramarine": "#004ED3",
        "aqua": "#2BD8C2",
        "spruce": "#00937B",
        "ink": "#0B2340",
        "muted": "#6A6F7A",
        "line": "#E6E8EC",
        "bg": "#F7F9FC",
        "secondary": "#2BD8C2",
        "success": "#00937B",
        "danger": "#dc3545",
        "neutral90": "#0B2340",
        "neutral70": "#0B2340",
        "neutral50": "#6A6F7A",
        "neutral30": "#888",
        "neutral10": "#E6E8EC",
        "bgLight": "#F7F9FC",
        "bgSubtle": "#fafafa",
        "white": "#ffffff"
      },
      "typography": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif",
        "h1": {
          "size": 22,
          "weight": 800
        },
        "h2": {
          "size": 16,
          "weight": 700
        },
        "h3": {
          "size": 12,
          "weight": 700
        },
        "body": {
          "size": 10,
          "weight": 400
        },
        "small": {
          "size": 9,
          "weight": 400
        },
        "label": {
          "size": 10,
          "weight": 600,
          "color": "#0B2340"
        },
        "value": {
          "size": 10,
          "weight": 600,
          "color": "#0B2340"
        },
        "fine": {
          "size": 9,
          "weight": 400,
          "color": "#6A6F7A"
        }
      },
      "borders": {
        "radius": 8,
        "hairline": "1px solid #E6E8EC"
      },
      "spacing": {
        "colGap": 16,
        "cardPadding": 12,
        "blockY": 16,
        "rowY": 8
      }
    },
    "pages": [
      {
        "name": "Page 1",
        "header": {
          "title": "<div class='header-professional'><img class='header-logo' src='{{ brand.logoUrl }}' alt='DMP'/></div>",
          "hasPageNumbers": false
        },
        "body": [
          {
            "type": "html",
            "template": "<div style='display: flex; justify-content: space-between; align-items: center; margin-bottom: 12px;'>\n  <div class='h1' style='text-align: left; flex: 1; color: #004ED3;'>Fee Recovery Analysis</div>\n  <div style='text-align: right; color: #6A6F7A; font-size: 11px;'>\n    {{ meta.reportDate }} • Report #{{ meta.reportId }}\n  </div>\n</div>\n<div class='title-rule'></div>\n<div class='executive-summary' style='margin-top: 16px;'><div class='title'>Executive Summary</div><div class='content'>This analysis is presented by Dynamic Merchant Processing to illustrate savings realized from the <strong>{{ metrics.programType }}</strong> program, based on inputs provided for {{ merchant.name }} on {{ meta.reportDate }}. Figures are estimates derived from the current processing profile and card-mix assumptions.</div></div>"
          },
          {
            "type": "html",
            "template": "<div class='your-monthly-impact'>\n  <div class='h2'>Your Monthly Impact</div>\n  <div class='hero-stats'>\n    <div class='hero-main'>\n      <div class='label'>Monthly<br>Savings (Est.)</div>\n      <div class='value'>{{ FORMAT.money(metrics.monthlySavings) }}</div>\n      <div class='annual'>Annualized: {{ FORMAT.money(metrics.annualSavings) }}</div>\n    </div>\n    <div class='hero-secondary'>\n      <div class='label'>Cost Reduction<br>vs Today</div>\n      <div class='value'>{{ FORMAT.percent(metrics.costReductionPct, 1) }}</div>\n      <div class='sub'>of processing eliminated</div>\n    </div>\n    <div class='hero-tertiary'>\n      <div class='label'>Program</div>\n      <div class='value-small'>{{ metrics.programType }}</div>\n    </div>\n  </div>\n</div>\n<div class='grid-12'>\n  <div class='col-6'>\n    <div class='section'>\n      <div class='h2'>Processing Cost vs Savings (Monthly)</div>\n      <table class='waterfall-table'>\n        <tr>\n          <td class='waterfall-label'>Today (Current Cost)</td>\n          <td class='waterfall-value negative'>{{ FORMAT.money(metrics.currentCost) }}</td>\n        </tr>\n        <tr>\n          <td class='waterfall-label'>With Program (Net Cost)</td>\n          <td class='waterfall-value negative'>{{ FORMAT.money(metrics.newProgramNetCost) }}</td>\n        </tr>\n        <tr>\n          <td class='waterfall-label'>Monthly Savings</td>\n          <td class='waterfall-value positive'>{{ FORMAT.money(metrics.monthlySavings) }}</td>\n        </tr>\n      </table>\n    </div>\n    <div class='section'>\n      <table class='simplified-waterfall'>\n        <tr>\n          <td class='waterfall-label'>Current Processing Cost</td>\n          <td class='waterfall-value negative'>{{ FORMAT.money(metrics.currentCost) }}</td>\n        </tr>\n        <tr>\n          <td class='waterfall-label'>Price Differential Collected (Cards)</td>\n          <td class='waterfall-value'>−</td>\n        </tr>\n        <tr>\n          <td class='waterfall-label'>Net Processing Cost (Program)</td>\n          <td class='waterfall-value negative'>{{ FORMAT.money(metrics.newProgramNetCost) }}</td>\n        </tr>\n      </table>\n      <div class='footnote'>Details and assumptions appear on Page 2.</div>\n    </div>\n  </div>\n  <div class='col-6'>\n    <div class='savings-allocation'>\n      <div class='h3'>Savings Allocation Plan</div>\n      <ul>\n        {{#if metrics.isRestaurant}}\n        <li>{{ FORMAT.money(metrics.monthlySavings) }} per month → Offset two server shifts weekly</li>\n        <li>{{ FORMAT.money(metrics.quarterlySavings) }} per quarter → Smallwares/linen refresh or menu board updates</li>\n        <li>{{ FORMAT.money(metrics.annualSavings) }} per year → Replace aging kitchen equipment or expand catering</li>\n        {{else}}\n        <li>{{ FORMAT.money(metrics.monthlySavings) }} per month → Fund seasonal promotions and local advertising</li>\n        <li>{{ FORMAT.money(metrics.quarterlySavings) }} per quarter → Refresh inventory displays or POS upgrades</li>\n        <li>{{ FORMAT.money(metrics.annualSavings) }} per year → Store renovation or e-commerce expansion</li>\n        {{/if}}\n      </ul>\n    </div>\n    <div class='service-implementation'>\n      <div class='h3'>Service & Implementation</div>\n      <ul>\n        <li>Best-in-class service, led by POS professionals who manage the changeover end-to-end</li>\n        <li>Structured onboarding with menu/config migration and staff orientation</li>\n        <li>Post-go-live support via rapid-response service desk</li>\n      </ul>\n    </div>\n  </div>\n</div>\n<div class='next-steps'>\n  <div class='h3'>Next Steps — It's Easy</div>\n  <div class='steps-row'>\n    <div class='step'>\n      <div class='step-number'>1) Confirm Inputs</div>\n      <div class='step-text'>Validate card mix, tax/tip, and price differential.</div>\n    </div>\n    <div class='step'>\n      <div class='step-number'>2) Schedule Install</div>\n      <div class='step-text'>Pick onboarding window; we prep config & staff.</div>\n    </div>\n    <div class='step'>\n      <div class='step-number'>3) Go Live</div>\n      <div class='step-text'><strong>Annualized impact:</strong> {{ FORMAT.money(metrics.annualSavings) }}</div>\n    </div>\n  </div>\n</div>"
          }
        ],
        "footer": {
          "left": "This quote is provided as an estimate of potential savings only. Actual results may vary.",
          "right": "© DMP — Confidential"
        }
      },
      {
        "name": "Page 2+",
        "dynamicPageSections": [
          {
            "sectionKey": "customerInformation",
            "titleStyle": "sectionHeader"
          },
          {
            "sectionKey": "inputParameters",
            "titleStyle": "sectionHeader"
          },
          {
            "sectionKey": "liveVolumeBreakdown",
            "titleStyle": "sectionHeader"
          },
          {
            "sectionKey": "monthlyProcessingSavings",
            "titleStyle": "sectionHeader"
          }
        ],
        "footer": {
          "left": "Trusted by 2,000+ businesses nationwide",
          "right": "© DMP — Confidential"
        }
      }
    ]
  }
}